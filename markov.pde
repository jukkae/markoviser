  double[] lerpRow(double[] initial, double[] target, float lerp) {
    double[] lerped = new double[initial.length];
    for(int i = 0; i < initial.length; i++) {
      lerped[i] = initial[i] + lerp*(target[i]-initial[i]);
    }
    return lerped;
  }
  
